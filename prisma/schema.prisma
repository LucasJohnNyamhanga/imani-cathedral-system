generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch", "fullTextIndex"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  // shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model user {
  id                Int           @id @default(autoincrement())
  image             String
  name              String        @db.Text
  tareheYaKuzaliwa  DateTime
  bahasha           String?       @db.Text
  jinsia            String
  haliYaNdoa        String
  ainaYaNdoa        String
  tareheYaNdoa      DateTime?
  jinaLaMwenza      String?
  nambaYaSimu       Int
  nambaYaSimuMwenza Int?
  jumuiyaId         Int
  jumuiya           jumuiya       @relation(fields: [jumuiyaId], references: [id])
  mtaa              String
  kata              String
  wilaya            String
  kazi              String
  elimu             String
  fani              String
  ubatizo           Boolean
  kipaimara         Boolean
  mezaYaBwana       Boolean
  ahadi             Int
  nenoLaSiri        String
  cheo              cheo[]
  dateJoined        DateTime      @default(now())
  updatedAt         DateTime      @updatedAt
  cheoHistory       cheoHistory[]
  kwaya             kwaya[]

  @@fulltext([bahasha])
  @@fulltext([name])
  @@fulltext([bahasha, name])
}

model jumuiya {
  id          Int    @id @default(autoincrement())
  name        String
  description String @db.LongText
  user        user[]
}

model cheo {
  id          Int           @id @default(autoincrement())
  name        String
  user        user[]
  cheoHistory cheoHistory[]
}

model cheoHistory {
  id     Int       @id @default(autoincrement())
  start  DateTime?
  end    DateTime?
  cheoId Int
  cheo   cheo      @relation(fields: [cheoId], references: [id])
  userId Int
  user   user      @relation(fields: [userId], references: [id])
}

model kwaya {
  id          Int    @id @default(autoincrement())
  name        String
  description String @db.LongText
  user        user[]
}
