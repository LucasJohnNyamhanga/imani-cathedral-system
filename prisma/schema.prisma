generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch", "fullTextIndex"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  // shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model user {
  id                Int       @id @default(autoincrement())
  image             String
  name              String    @db.Text
  tareheYaKuzaliwa  DateTime
  bahasha           String?   @db.Text
  jinsia            String
  haliYaNdoa        String
  ainaYaNdoa        String?
  tareheYaNdoa      DateTime?
  jinaLaMwenza      String?
  nambaYaSimu       String
  nambaYaSimuMwenza String?
  jumuiyaId         Int
  jumuiya           jumuiya   @relation(fields: [jumuiyaId], references: [id])
  mtaa              String
  kata              String
  wilaya            String
  kazi              String
  elimu             String
  fani              String
  ubatizo           Boolean   @default(false)
  kipaimara         Boolean   @default(false)
  mezaYaBwana       Boolean   @default(false)
  ahadi             Int
  nenoLaSiri        String
  cheo              cheo[]
  dateJoined        DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  kikundi           kikundi[]
  missing           Boolean   @default(false)
  verified          Boolean   @default(false)
  sadaka            sadaka[]

  @@fulltext([bahasha])
  @@fulltext([name])
  @@fulltext([bahasha, name])
}

model jumuiya {
  id          Int    @id @default(autoincrement())
  name        String
  description String @db.LongText
  user        user[]
  cheo        cheo[]
}

model cheo {
  id         Int       @id @default(autoincrement())
  jinaLaCheo String
  user       user[]
  jumuiya    jumuiya[]
  kikundi    kikundi[]
}

model kikundi {
  id          Int    @id @default(autoincrement())
  name        String
  description String @db.LongText
  userId      Int
  user        user   @relation(fields: [userId], references: [id])
  cheo        cheo[]
}

model sadaka {
  id     Int      @id @default(autoincrement())
  tarehe DateTime
  amount Int
  userId Int
  user   user     @relation(fields: [userId], references: [id])
}
